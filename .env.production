# Prize2Pride Platform - Production Environment Configuration
# Manus Secure Servers Deployment

# ============================================
# Application Configuration
# ============================================
NODE_ENV=production
VITE_API_URL=https://api.prize2pride.com
VITE_APP_URL=https://prize2pride.com

# ============================================
# Database Configuration (Managed TiDB)
# ============================================
DATABASE_URL=mysql://user:password@db.manus-cloud.internal:3306/prize2pride?ssl=true&sslMode=require
DATABASE_POOL_SIZE=20
DATABASE_POOL_TIMEOUT=30000

# ============================================
# Authentication & Security
# ============================================
JWT_SECRET=${MANUS_VAULT_JWT_SECRET}
SESSION_SECRET=${MANUS_VAULT_SESSION_SECRET}
OAUTH_CLIENT_ID=${MANUS_VAULT_OAUTH_CLIENT_ID}
OAUTH_CLIENT_SECRET=${MANUS_VAULT_OAUTH_CLIENT_SECRET}

# ============================================
# OpenAI API (Text-to-Speech)
# ============================================
OPENAI_API_KEY=${MANUS_VAULT_OPENAI_API_KEY}
OPENAI_API_BASE=https://api.openai.com/v1
TTS_MODEL=tts-1-hd
TTS_VOICE=nova

# ============================================
# Manus S3-Compatible Storage
# ============================================
S3_ENDPOINT=https://s3.manus-cloud.internal
S3_REGION=us-east-1
S3_BUCKET=prize2pride-assets
S3_ACCESS_KEY_ID=${MANUS_VAULT_S3_ACCESS_KEY}
S3_SECRET_ACCESS_KEY=${MANUS_VAULT_S3_SECRET_KEY}
S3_USE_SSL=true

# ============================================
# Logging & Monitoring
# ============================================
LOG_LEVEL=info
SENTRY_DSN=${MANUS_VAULT_SENTRY_DSN}
DATADOG_API_KEY=${MANUS_VAULT_DATADOG_API_KEY}

# ============================================
# Performance & Caching
# ============================================
REDIS_URL=redis://cache.manus-cloud.internal:6379
CACHE_TTL=3600
SESSION_TIMEOUT=86400

# ============================================
# Email Service (for notifications)
# ============================================
SMTP_HOST=mail.manus-cloud.internal
SMTP_PORT=587
SMTP_USER=${MANUS_VAULT_SMTP_USER}
SMTP_PASSWORD=${MANUS_VAULT_SMTP_PASSWORD}
SMTP_FROM=noreply@prize2pride.com

# ============================================
# Analytics
# ============================================
VITE_ANALYTICS_ENDPOINT=https://analytics.manus-cloud.internal
VITE_ANALYTICS_WEBSITE_ID=${MANUS_VAULT_ANALYTICS_ID}

# ============================================
# Feature Flags
# ============================================
FEATURE_SPEECH_RECOGNITION=true
FEATURE_VIDEO_LESSONS=true
FEATURE_MOBILE_APP=true
FEATURE_ADVANCED_ANALYTICS=true

# ============================================
# Rate Limiting & Security
# ============================================
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX_REQUESTS=100
CORS_ORIGIN=https://prize2pride.com,https://www.prize2pride.com

# ============================================
# Deployment Metadata
# ============================================
DEPLOYMENT_VERSION=3.0.0
DEPLOYMENT_TIMESTAMP=$(date -u +"%Y-%m-%dT%H:%M:%SZ")
DEPLOYMENT_ENVIRONMENT=production
DEPLOYMENT_REGION=manus-cloud-us-east-1
